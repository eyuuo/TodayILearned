<Baekjoon Practice>
https://www.acmicpc.net/problem/10809

#include <stdio.h>
#include <string.h>

int main()
{
   char str[101];
   int alphabet[26];
   int temp;
    
   // initialize alphabet[]
   for(int i = 0; i < 26; i ++) {
   		alphabet[i] = -1;
   }
   
   scanf("%s", str);
    
   for(int i = 0; i < strlen(str); i ++) {
       // temp represents alphabetical order of str[i]
       temp = str[i] - 'a';
        
       if(alphabet[temp] == -1)
           alphabet[temp] = i;
   }
    
   for(int i = 0; i < 26; i ++) {
    	printf("%d ", alphabet[i]);
   }
   
   return 0;
}
